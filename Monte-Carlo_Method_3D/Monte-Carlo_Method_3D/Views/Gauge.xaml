<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Monte_Carlo_Method_3D.Views"
                    xmlns:gauge="clr-namespace:Monte_Carlo_Method_3D.Gauge">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <DataTemplate x:Key="GaugeTemplate" DataType="{x:Type gauge:GaugeContext}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Шкала ймовірності" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="4"/>
            <gauge:GaugeGradient Pallete="{Binding Pallete}" Width="100" Grid.Row="1"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
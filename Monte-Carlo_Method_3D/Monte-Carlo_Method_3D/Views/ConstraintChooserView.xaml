<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Monte_Carlo_Method_3D.Views"
                    xmlns:vm="clr-namespace:Monte_Carlo_Method_3D.ViewModels"
                    xmlns:ut="clr-namespace:Monte_Carlo_Method_3D.Util">
    <DataTemplate DataType="{x:Type vm:ConstraintChooserViewModel}">
        <StackPanel>
            <WrapPanel Margin="4">
                <TextBlock Text="Остановка симуляции:" Margin="2"/>
                <ComboBox ItemsSource="{Binding Creators}" SelectedValue="{Binding CurrentConstraintCreator}"/>
            </WrapPanel>
            <WrapPanel Margin="4">
                <TextBlock Text="{Binding ArgName}" Margin="2"/>
                <TextBox Text="{Binding CreatorArg}" Margin="2"/>
            </WrapPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
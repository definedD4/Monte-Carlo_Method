<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Monte_Carlo_Method_3D.Views"
                    xmlns:vm="clr-namespace:Monte_Carlo_Method_3D.ViewModels"
                    xmlns:ut="clr-namespace:Monte_Carlo_Method_3D.Util"
                    xmlns:cl="clr-namespace:Monte_Carlo_Method_3D.Calculation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ConstraintChooserView.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <DataTemplate DataType="{x:Type vm:СlTabViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <WrapPanel Margin="4" Grid.Row="0">
                <TextBlock Margin="2" Text="Способ симуляции:"/>
                <ComboBox Margin="2" ItemsSource="{ut:EnumSelection {x:Type cl:CalculationMethod}}" SelectedValue="{Binding CalculationMethod}" 
                          DisplayMemberPath="DisplayName" SelectedValuePath="Value"/>
            </WrapPanel>
            <ContentPresenter Content="{Binding ConstraintChooser}" Grid.Row="1"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
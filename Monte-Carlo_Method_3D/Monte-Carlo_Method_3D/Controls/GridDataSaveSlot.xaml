<UserControl x:Class="Monte_Carlo_Method_3D.Controls.GridDataSaveSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monte_Carlo_Method_3D.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="{DynamicResource BorderThickness}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="4" x:Name="TbName" Grid.Column="0"/>
            <Button Margin="4" x:Name="BtnSave" Content="Зберігти" Click="BtnSave_Click"  Grid.Column="1"/>
            <Button Margin="4" x:Name="BtnView" Content="Переглянути" Click="BtnView_Click" Grid.Column="2"/>

        </Grid>
    </Border>
</UserControl>

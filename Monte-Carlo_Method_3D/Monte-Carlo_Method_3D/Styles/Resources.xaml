<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="ActiveBackgroundColor" Color="#FF1A59B4"/>
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#FFEAEAEA"/>

    <SolidColorBrush x:Key="BorderColor" Color="LightGray"/>
    <Thickness x:Key="BorderThickness">1</Thickness>

    <SolidColorBrush x:Key="PrimaryForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryForegroundColor" Color="White"/>
</ResourceDictionary>